<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10sp"
    android:background="@color/teal_700"
    android:padding="9sp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_home_black_24dp">


    </de.hdodenhof.circleimageview.CircleImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12sp"
        android:background="@color/design_default_color_surface"
        android:orientation="vertical"
        android:padding="2sp">

        <TextView
            android:id="@+id/name_surname_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Mark Bennet"
            android:textColor="@color/purple_700"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tel_number_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+996 555356590"
            android:textColor="@color/purple_700"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/my_message"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/white"
            android:backgroundTint="#EDECEC"
            android:hint="write here message:"
            android:visibility="gone" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/dropdown_menu"

        android:layout_width="50sp"
        android:layout_height="100sp"
        android:layout_gravity="end"
        android:contentDescription="Drop down menu"
        tools:ignore="TouchTargetSizeIgnore"
        android:layout_marginStart="20sp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_launcher_foreground"></ImageButton>

</LinearLayout>